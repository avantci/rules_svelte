{
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es2017",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
    "paths": {
      "@svelte-ts/*": [
        "./packages/*"
      ]
    }
  },
	"exclude": [
		"dist",
		"bazel-*",
		"node_modules",
		"**/*.spec.ts"
	]
}
